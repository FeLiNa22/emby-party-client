{
  "name": "Emby Party",
  "description": "Watch movies and tv shows together with friends using your Emby server",

  "manifest_version": 2,
  "version": "0.1",

  "icons": {
    "16": "logo16.png",
    "48": "logo48.png",
    "128": "logo128.png"
  },

  "background": {
    "scripts": ["static/js/background.js"]
  },

  "browser_action": {
    "default_icon": {
      "16": "logo16.png",
      "48": "logo48.png",
      "128": "logo128.png"
    },
    "default_title": "Emby Party",
    "default_popup": "popup.html"
  },

  "options_ui": {
    "page": "options.html"
  },

  "web_accessible_resources": [ "static/js/sidebar.js", "sidebar.html"],

  "permissions": ["storage","tabs",
    "activeTab"
  ]
}
